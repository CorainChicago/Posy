<!DOCTYPE html>
<html>
<head>
  
  <% if @location %>
    <title>Posy | <%= @location.name %></title>
  <% else %>
    <title>Posy</title>
  <% end %>

  <%= favicon_link_tag 'favicon.ico' %>
  <link rel="apple-touch-icon-precomposed" href="<%= asset_path 'favicon-152' %>">
  <link href='http://fonts.googleapis.com/css?family=Playfair+Display:700italic|Lato:100,200,300,400,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="<%= controller_name %> <%= action_name %>">

<%= yield %>

</body>
</html>
