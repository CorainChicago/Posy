<tr class="admin-post">
  <td class="admin-time"><%= post.created_at.strftime("%m/%d %H:%M") %></td>
  <td class="admin-location"><%= post.spotted_at %></td>
  <td class="admin-hair"><%= post.hair %></td>
  <td class="admin-gender"><%= post.gender %></td>
  <td class="admin-content"><%= post.content %></td>
  <td class="admin-flags"><%= post.flagged %></td>
  <td class="admin-show"><%= (post.clear?) ? "Y" : "N" %></td>
  <td class="admin-ok"><%= button_to "OK", location_post_clear_path(location, post), method: "POST" %></td>
  <td class="admin-hide"><%= button_to "Hide", location_post_path(location, post), method: :delete, data: {confirm: "Are you sure?"} %></td>
</tr>

<% post.comments.each do |comment| %>
  <%= render partial: "admin_row_comment", locals: {location: location, post: post, comment: comment} %>
<% end %>